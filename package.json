{
  "name": "@curriculumassociates/accessibility-module",
  "version": "2.0.0",
  "description": "Module to add accessibility support to adding an accessible overlay",
  "main": "dist/createjs-accessibility.js",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "predocs": "rm -rf docs/",
    "docs": "typedoc",
    "generate": "plop",
    "test": "lerna run test --stream",
    "test:coverage": "lerna run test:coverage --stream",
    "prestart": "lerna run compile --stream",
    "compile": "lerna run compile --stream -- -- --watch",
    "start": "concurrently \"npm run compile\" \"lerna run start --stream\"",
    "clean": "lerna run clean",
    "clobber": "lerna run clean && lerna run clobber",
    "build": "lerna run build",
    "release": "lerna publish --no-git-reset --yes",
    "test-app:start": "cd packages/test-app/ && npm start"
  },
  "pre-commit": [
    "pre-commit"
  ],
  "lint-staged": {
    "src/**/*.(js|ts|tsx)": [
      "npm run lint:fix",
      "prettier --write"
    ]
  },
  "files": [
    "dist/"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CurriculumAssociates/createjs-accessibility.git"
  },
  "keywords": [
    "createjs",
    "accessibility",
    "508",
    "wcag",
    "aria"
  ],
  "author": {
    "name": "Curriculum Associates",
    "email": "opensource@cainc.com"
  },
  "license": "ISC",
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.19.1",
    "@babel/preset-env": "^7.19.4",
    "@babel/preset-typescript": "^7.18.6",
    "@rollup/plugin-babel": "^6.0.0",
    "@rollup/plugin-commonjs": "^23.0.0",
    "@rollup/plugin-json": "^5.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^9.0.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "concurrently": "^7.4.0",
    "eslint": "^8.25.0",
    "eslint-plugin-jest-dom": "^4.0.2",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lerna": "^5.6.2",
    "nx": "14.8.4",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "rollup": "^3.0.0",
    "tslib": "^2.4.0",
    "typedoc": "^0.23.16",
    "typescript": "^4.8.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "workspaces": [
    "packages/*"
  ]
}
